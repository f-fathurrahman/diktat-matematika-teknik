\begin_layout Standard
Impuls satuan
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\delta(t)=0,\quad t\leq0
\]

\end_inset


\begin_inset Formula 
\[
\int_{-\infty}^{\infty}\delta(t)\,\mathrm{d}t=1
\]

\end_inset


\end_layout

